<%= form_for :user, url: "/users/edit", action: :update, method: :post  do |form| %>

  <p>
  <% if @user.profile_image_url.present?%>
  <%= image_tag @user.profile_image_url(:thumb) %>
  <%end%>
  </p>
<p>Upload profile image:<br>
<%= form.file_field :profile_image %></p>
<p>Upload profile image from url:<br>
<%= form.text_field :remote_profile_image_url %></p>

<div class="text-field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, type: 'first_name' %>
</div>

<div class="text-field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, type: 'last_name' %>
</div>

<div class="text-field">
  <%= form.label :gender %>
  <%= form.text_field :gender, type: 'gender' %>
</div>

<div class="text-field">
  <%= form.label :phone %>
  <%= form.text_field :phone, type: 'phone' %>
</div>

<div class="text-field">
  <%= form.label :country %>
  <%= form.text_field :country, type: 'country' %>
</div>

<div class="text-field">
  <%= form.label :birthdate %>
  <%= form.text_field :birthdate, type: 'birthdate' %>
</div>

<%= form.submit "Update Account" %>

<% end %>

