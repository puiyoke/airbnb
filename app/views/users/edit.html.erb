<%= form_for :user, url: "/users/edit", action: :update, method: :post  do |form| %>

  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form.file_field :profile_image %>
  <p>
    <%= form.text_field :remote_profile_image_url %>
  </p>

  <div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="text-field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, type: 'first_name' %>
</div>

<div class="text-field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, type: 'last_name' %>
</div>

<div class="text-field">
  <%= form.label :phone %>
  <%= form.text_field :phone, type: 'phone' %>
</div>

<div class="text-field">
  <%= form.label :country %>
  <%= form.text_field :country, type: 'country' %>
</div>

<div class="text-field">
  <%= form.label :birthdate %>
  <%= form.text_field :birthdate, type: 'birthdate' %>
</div>

<%= form.submit "Update Account" %>

<% end %>

<p>
<% if @user.profile_image.url.present?%>
<%= image_tag @user.profile_image.url %>
<%end%>
</p>