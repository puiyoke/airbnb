<!DOCTYPE html>
<html>
  <head>
    <title>Airbnb</title>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <% if signed_in? -%>
        <% if current_user.super_admin? %>
          <h4>Welcome Super Admin <%= current_user.email %></h4>
        <% elsif current_user.moderator? %>
          <h4>Welcome, Moderator <%= current_user.email %></h4>
        <% else %>
          <h4>Welcome <%= current_user.email %></h4>
        <% end %>
        <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
        <a href="/users/edit">Edit Profile</a> | <a href="/listings/new">New Listing</a>
      <% else -%>
        <%= link_to t(".sign_in"), sign_in_path %> | 
        <%= link_to "Sign in with Google", "/auth/google_oauth2?prompt=select_account" %>
      <% end -%>
    </div>

    <div id="flash">
      <% flash.each do |key, value| -%>
        <div id="flash_<%= key %>"><%=h value %></div>
      <% end %>
    </div>

    <%= yield %>
    <a href="/">Home</a>
    </div>
     
  </div>



